{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["node"] // Add here if missing
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
